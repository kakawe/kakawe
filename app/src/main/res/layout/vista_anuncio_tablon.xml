<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_vista_anuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <ImageView
                android:id="@+id/iv_vista_anuncio_foto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/tv_vista_anuncio_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/iv_vista_anuncio_foto"
                android:text="Titulo"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_vista_anuncio_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:layout_below="@id/tv_vista_anuncio_titulo"
                android:layout_toRightOf="@id/iv_vista_anuncio_foto"
                android:text="Descripcion anuncio" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>