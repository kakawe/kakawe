<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_editarPerfil_editarImagen"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_editarPerfil_nombre"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/et_editarPerfil_nombre"
            android:layout_marginTop="71dp"
            android:text="editar imagen" />

        <EditText
            android:id="@+id/et_editarPerfil_nombre"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bt_editarPerfil_editarImagen"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:hint="Nombre completo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_editarPerfil_correo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_editarPerfil_nombre"
            android:layout_alignRight="@+id/et_editarPerfil_nombre"
            android:layout_below="@+id/et_editarPerfil_nombre"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_editarPerfil_contraseñaActual"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_editarPerfil_correo"
            android:layout_alignStart="@+id/et_editarPerfil_correo"
            android:layout_below="@+id/et_editarPerfil_correo"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Contraseña Actual"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_editarPerfil_contraseñaNueva"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_editarPerfil_contraseñaActual"
            android:layout_alignStart="@+id/et_editarPerfil_contraseñaActual"
            android:layout_below="@+id/et_editarPerfil_contraseñaActual"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Nueva Contraseña"
            android:inputType="textPassword" />
    </LinearLayout>

</LinearLayout>