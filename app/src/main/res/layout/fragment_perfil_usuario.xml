<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:weightSum="10"
    tools:context="com.example.admin.kakawev2.Tablon.PerfilUsuarioFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_perfilUs_fotoUs"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/googleg_standard_color_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_nomuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/et_perfilUs_nombreUsuario"
                style="@style/et_registro"
                android:drawableLeft="@drawable/ic_action_person"
                android:hint="Nombre Usuario" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_correouser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/et_perfilUs_correoUsuario"
                style="@style/et_registro"
                android:drawableLeft="@drawable/ic_action_correo"
                android:hint="Correo Usuario" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/bt_perfilUs_modContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Modificar ContraseÃ±a" />

        <Button
            android:id="@+id/bt_perfilUs_actualiarDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <Button
            android:id="@+id/bt_perfilUs_cerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesion" />
    </LinearLayout>

</LinearLayout>
