<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.example.admin.kakawev2.LoginActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_login_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_atras"/>

        <ImageView
            android:id="@+id/logo_kakawe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logotipo_kakawe"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/marron"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_login_correo"
                style="@style/et_login"
                android:textAlignment="center"
                android:hint="Email"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/et_login_contrasena"
                style="@style/et_login"
                android:textAlignment="center"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/bt_login_entrar"
                style="@style/bt_main"
                android:elevation= "10dp"
                android:text="ENTRAR"
                android:backgroundTint="@color/rojo"
                android:layout_marginTop="60dp"/>

            <TextView
                android:id="@+id/tv_login_recordarcontra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato_bold"
                android:text="Olvide la contraseña"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
