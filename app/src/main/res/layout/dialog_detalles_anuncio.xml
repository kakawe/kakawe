<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_detallesAnuncio_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_detallesAnuncio_fotoAnuncio"
                    android:layout_width="429dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stewie" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detallesAnuncio_tipoAnuncio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Tipo"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detallesAnuncio_tituloAnuncio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Titulo"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detallesAnuncio_mensajeAnuncio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Mensaje"
                android:textSize="18sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>