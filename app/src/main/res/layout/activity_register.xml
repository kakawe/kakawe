<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.admin.kakawev2.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/et_registro_nombre"
            android:hint="Nombre"
            style="@style/camposTexto" />
        <!--android:drawableLeft="@drawable/ic_action_name"-->

        <EditText
            android:id="@+id/et_registro_correo"
            android:hint="Correo"
            style="@style/camposTexto" />
        <!--android:drawableLeft="@drawable/ic_correo"-->

        <EditText
            android:id="@+id/et_registro_contrasena"
            android:hint="Contraseña"
            style="@style/camposTexto"
            android:inputType="textPassword" />
        <!--android:drawableLeft="@drawable/ic_contrasena"-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/bt_registro_registrar"
            style="@style/BotonLogin"
            android:text="REGISTRAR" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/ib_registro_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageButton
                android:id="@+id/ib_registro_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageButton
                android:id="@+id/ib_registro_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher_round" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_registro_login"
            style="@style/textosLogin"
            android:layout_width="wrap_content"
            android:text="¿Ya tienes cuenta? Inicia sesión" />
    </LinearLayout>
</LinearLayout>
