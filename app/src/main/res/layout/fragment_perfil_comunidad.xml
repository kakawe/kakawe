<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.admin.kakawev2.Tablon.PerfilComunidadFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_menuPrincipal_fotoCom"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/gris" />

        <ImageView
            android:id="@+id/iv_perfilCom_cerrar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_cerrar" />


    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            style="@style/tv_label_main"
            android:layout_marginBottom="5dp"
            android:text="Comunidad" />

        <TextView
            android:id="@+id/tv_perfilCom_nombreCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/lato"
            android:text="Nogales"
            android:textSize="20sp" />

        <TextView
            style="@style/tv_label_main"
            android:layout_marginBottom="5dp"
            android:text="Mi domicilio" />

        <EditText
            android:id="@+id/et_perfilCom_piso"
            style="@style/et_main"
            android:hint="Piso"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_perfilCom_puerta"
            style="@style/et_main"
            android:hint="Puerta"
            android:inputType="text" />


        <Button
            android:id="@+id/bt_perfilCom_actualiarDatos"
            style="@style/bt_main"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/marron"
            android:text="Guardar" />

    </LinearLayout>

</LinearLayout>
