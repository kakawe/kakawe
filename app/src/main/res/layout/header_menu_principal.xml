<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp">
    
    <ImageView
        android:id="@+id/iv_menuPrincipal_comunidad_foto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logotipo_kakawe" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/scrim" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_menuPrincipal_comunidad_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:text="Nogales"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_menuPrincipal_comunidad_domicilio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="1ยบ A"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>