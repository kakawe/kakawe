<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.example.admin.kakawev2.Anadir_Comunidad.AnadirDomicilioFragment">


    <TextView
        android:id="@+id/tv_anadirDomicilio_crear"
        style="@style/textosLogin"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/ic_action_atras"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/et_anadirDomicilio_piso"
                style="@style/camposTexto"
                android:drawableLeft="@drawable/ic_action_piso1"
                android:hint="Piso" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_puerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <EditText
            android:id="@+id/et_anadirDomicilio_puerta"
            style="@style/camposTexto"
            android:drawableLeft="@drawable/ic_action_puerta1"
            android:hint="Puerta" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="40dp">

        <Button
            android:id="@+id/bt_anadirDomicilio_continuar"
            style="@style/BotonLogin"
            android:text="Entrar" />
    </LinearLayout>

</LinearLayout>
