<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.admin.kakawev2.PerfilUsuarioActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_perfilUs_cerrar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_cerrar" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_perfilUs_fotoUs"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:src="@drawable/googleg_standard_color_18"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#8BC34A"
                app:civ_shadow_radius="10" />

            <TextView
                style="@style/tv_label_main"
                android:layout_marginBottom="5dp"
                android:text="Mi cuenta" />

            <EditText
                android:id="@+id/et_perfilUs_email"
                style="@style/et_main"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/bt_perfilUs_modContrasena"
                style="@style/et_main"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:text="123456"
                android:textSize="25sp" />

            <TextView
                style="@style/tv_label_main"
                android:layout_marginBottom="5dp"
                android:text="Datos personales" />

            <EditText
                android:id="@+id/et_perfilUs_nombre"
                style="@style/et_main"
                android:hint="Nombre"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_perfilUs_apellidos"
                style="@style/et_main"
                android:hint="Apellidos"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_perfilUs_nacimiento"
                style="@style/et_main"
                android:hint="Fecha de nacimiento"
                android:inputType="date" />

            <TextView
                style="@style/tv_label_main"
                android:layout_marginBottom="5dp"
                android:text="Datos de contacto" />

            <EditText
                android:id="@+id/et_perfilUs_telefono"
                style="@style/et_main"
                android:hint="Teléfono"
                android:inputType="phone" />

            <TextView
                style="@style/tv_label_main"
                android:layout_marginBottom="5dp"
                android:text="Sobre mí" />

            <EditText
                android:id="@+id/et_perfilUs_sobreMi"
                style="@style/et_main"
                android:layout_height="150dp"
                android:gravity="top"
                android:hint="Escribe algo sobre tí"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <Button
                android:id="@+id/bt_perfilUs_actualiarDatos"
                style="@style/bt_main"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="50dp"
                android:backgroundTint="@color/marron"
                android:text="Guardar" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
