<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="et_registro">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_border_et_registro</item>
    </style>

    <style name="bt_main">
        <item name="android:layout_width">265dp</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:background">@drawable/bg_border_btn</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="et_login">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/bg_border_et_login</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
